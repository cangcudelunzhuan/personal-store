.loading_page
  position: fixed
  left:0
  top:0
  width:100%
  height:100%
  z-index: 1000
  .line_items,.line_items:after,.line_items:before
    position: absolute
    content:''
    display: block
    height: 15Px
    border-radius:3Px
    background-color:#e0e0e0

  .line_items:first-child
    width:70%
    top:80Px
    left:5%

    &:before
      left:0
      top:32Px
      width:80%

    &:after
      left:0
      top:64Px
      width:90%

  .line_items:last-child
    width:70%
    left:5%
    top:230Px

