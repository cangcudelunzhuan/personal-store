.has_infobox
  padding-bottom: 30px
  .title
    font-size: 32px
    color: rgba(51, 51, 51, 1)
    position: relative
    text-align: left
    padding-left: 25px
    margin-bottom: 15px
    &:before
      position: absolute
      content: ''
      background: rgba(249, 72, 46, 1)
      width: 8px
      height 28px
      margin: auto 0
      left 0
      top: 0
      bottom: 0
      border-radius: 4px
    &:after
      position: absolute
      content: ''
      width: 100%
      height 1px
      background: rgba(227, 227, 227, 1)
      left: 0
      bottom: -15px
      opacity 0.6
  .item
    display: flex
    align-items: center
    justify-content: space-between
    padding: 32px
    background: rgba(245, 245, 245, 1)
    border-radius: 12px
    margin-top: 32px
    .icon
      font-size: 35px
      margin-right: 24px
      color: #999999
    .right
      flex: 1
      text-align: left
      .name
        font-size: 32px
      .idnumber
         font-size: 28px
         color: rgba(102, 102, 102, 1)
