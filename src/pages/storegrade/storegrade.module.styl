
 .out
   background: #F7F7F7
  .back
    position: fixed
    width: 100%
    height :100%
    left: 0
    top: 0
    background: #F7F7F7
    z-index:-1

input::-webkit-input-placeholder
  color rgba(179, 179, 179, 1)

.confirm_style
  display: flex
  align-items: center
  justify-content: center
  margin:40px 32px
  justify-content: space-between
.confirm_btn
  background rgba(249, 72, 46, 1)
  border-radius 44px
  margin-bottom env(safe-area-inset-bottom)
  margin-bottom constant(safe-area-inset-bottom)
  text-align center
  font-size 28px
  line-height: 28px
  padding: 24px
  font-weight 400
  color rgba(255, 255, 255, 1)
  flex: 1
.confirm_btn+.confirm_btn
  margin-left: 16px
.white_button
  background: #ffffff
  border: 1px solid #aaaaaa
  color: rgba(51, 51, 51, 1)
.confirm_btn_gray 
  background: #dfdfdf




.item_box
  background: #ffffff
  border-radius: 16px
  margin:24px
  .i_title
    font-size: 32px
    position: relative
    padding: 30px 48px
    &:before
      position: absolute
      left: 24px
      top: 0
      bottom: 0
      content: ''
      background: rgba(249, 72, 46, 1)
      width: 8px
      height: 28px
      border-radius: 4px
      margin: auto 0
  .item_content
    border-top: 1px solid rgba(239, 239, 239, 1)
    padding: 24px
    .item_line
      display: flex
      align-items: center
      justify-content: space-between
      font-size: 28px
      color: #555
      padding: 24px 0
      line-height: 28px
      .left
        display: flex
        align-items: center  
        .img
          width: 37px
          height :28px
          display: block
          margin-bottom: 0
          margin-right: 10px
      .right
        display: flex
        flex: 1
        justify-content: flex-end
        align-items: center
        .input_wrap
          border: 0px solid #dfdfdf
          font-size: 28px
          padding: 27px 0
          width: 288px
          margin-left: 16px
          border-radius: 4px    
          text-align: right      

