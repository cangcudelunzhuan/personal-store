.page
  padding-left: 20px
  padding-right: 20px

.grid_empty
  padding-top:230px

.top_search
  // height:72px
  display: flex
  align-items: center
  justify-content: space-between
  padding-top:25px
  padding-bottom:25px

.search_box
  border:1Px solid #F9482E
  border-radius: 72px
  height:72px
  position relative
  width: 90%
  input
    height:100%
    border:none
    padding-left:70px
    padding-right: 70px

.clean_icon
  position absolute
  right:20px
  top:8px
  width:32px
  height:32px
  font-size: 32px
  color:#CACACA

.search_icon
  position absolute
  left:20px
  top:8px
  width:32px
  height:32px
  font-size: 32px
  color:#CACACA

.search_btn
  color:#F9482E

.history_title
  font-size: 32px
  font-weight: bold
  color:#333
  margin-bottom: 30px

.history_items
  float: left
  padding:10px 25px
  height:50px
  line-height: 30px
  border-radius: 50px
  margin-right:10px
  margin-bottom:20px
  background-color: #EBEBEB
  color:#999

.history_box
  position relative
  &:after
    clear both
    content: ''
    display:block

.clean_item_icon
  position: absolute
  right:15px
  top:15px
  color:#C9C9C9
  font-size: 28px
