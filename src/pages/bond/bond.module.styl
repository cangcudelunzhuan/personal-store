.top_banner
  background-image: url('https://jxkcdn.jingxiaokang.com/assets/images/1590376283403_353.png')
  height:480px
  background-position: center center
  background-size:cover

.content
  background-color: white
  padding-bottom: 30px
  padding-top:70px
  position: relative

.user_box
  background-color: white
  position: absolute
  box-shadow: 0 0 3px #ccc
  width:90%
  padding:30px 20px 15px 20px
