 .allInner,.allotherInner
  :global
    .at-tabs__header
      // margin-bottom:20px
      background:#F7F7F7
      padding-bottom:10px
    .at-tabs__item
      font-size: 28px
      line-height: 28px
      position: relative
      color: #666666
      margin: 10px 0
      &:after
        width: 0
        transition: all 0.2s 
        position: absolute
        content: ''
        height:5px;
        background:linear-gradient(270deg,rgba(255,255,255,1) 0%,rgba(249,72,46,1) 100%);
        border-radius:3px;
        left: 25%
        bottom: 5px
    .at-tabs__item--active
        color: #333333
        font-weight: bold
        &:after  
          width: 50%  
    .at-tabs__item-underline
      display: none
    .at-tabs__underline
      display: none
.allotherInner
  :global
    .at-tabs__header
      padding-bottom:0
      margin-bottom:0
