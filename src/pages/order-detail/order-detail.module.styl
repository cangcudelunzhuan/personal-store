.after_box
  padding: 0
  .item
    padding: 28px 0
    font-size: 24px
    line-height: 24px
    display: flex
    align-items: center
    position: relative
    .label
      width: 130px
      flex-shrink: 0
  .img_item
    flex-direction: column
    align-items: flex-start
    .desc
      margin-top: 20px
      .img
        width: 178px
        height:178px
