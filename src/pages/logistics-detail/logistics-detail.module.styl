 .out
   position: relative
   z-index 1
 .addres_box
   color: #333333
   font-size: 28px
   text-align: center
   padding: 20px 0
   line-height: 28px
   background: #ffffff
   margin: 32px
   border-radius: 12px
   min-height: 500px

.item
  display: flex
  align-items: center
  margin: 0 28px
  font-size: 28px
  line-height: 28px
  background: #ffffff
  position: relative
  padding: 20px 0
  opacity 0.7
  &:before
    content: ''
    position: absolute
    height: 100%
    width: 2px
    background: #EBEBEB
    border-radius:1px;
    top: 0
    left 140px
  &:after
    content: ''
    position: absolute
    height: 10px
    width: 10px
    background: #C9C9C9
    line-height: 12px
    border-radius:50%
    top: calc(50% - 5px)
    left 136px
  .date_box
    color: #989898
    font-size: 20px
    width: 120px
    text-align: left 
  .status
    flex: 1
    margin-left: 45px
    text-align: left 
    line-height: 32px
    font-size: 24px
.active
  opacity 1
  &:after
    background #F9482E
.name_box
  display: flex
  align-items: center
  color: #333333
  font-weight: bold
  font-size:28px
  padding: 20px 32px  32px 32px
  position: relative
  z-index: 99
  margin-bottom: 24px
  &:after
    position: absolute
    width: 200%
    height 1px
    left: -50%
    bottom: 0
    transform: scale(0.5)
    background: #C9C9C9
    content: ''
    opacity 0.7
  .name
    margin-right: 20px
.red_bar
  position: fixed
  left 0
  top: 0
  background: #F9482E
  height 372px
  z-index -1
  width: 100%
.back
  position: fixed
  left 0
  top: 0
  background: #F7F8FA
  height 100%
  z-index -2
  width: 100%

.copy_box
  color: rgba(249, 72, 46, 1)
  margin-left: 30px
  font-size: 24px
  background: #ffffff
  border: 1px solid rgba(249, 72, 46, 1)
  padding: 0px 12px
  border-radius:4px;
  line-height: 34px
  height 34px
  font-weight: 400