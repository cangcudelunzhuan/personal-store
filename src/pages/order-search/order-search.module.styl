 .out
   position: relative
   z-index 1
 .search_box
   display: flex
   align-items: center
   justify-content: space-between
   margin: 24px 32px
   .left
    background: rgba(247, 248, 250, 1)
    border-radius:32px;
    font-size: 26px
    color: rgba(51, 51, 51, 1)
    width: 598px
    height: 64px
    padding: 16px 32px
    display: flex
    align-items: center
    .delete
      font-size: 32px
      color: #999999
      display: block
      width: 50px
      height: 50px
      text-align: right
      line-height: 50px
    .search_type
      flex-shrink: 0
      display: flex
      align-items: center
      position: relative
      min-width: 140px
      .icon
        margin-left: 10px
      .down
        transform: rotate(180deg)
      .tip_box
        position: absolute
        top: 70px
        z-index 99
        left -20px
        color: #ffffff
        padding: 12px
        width: 100%
        .item+.item
          margin-top: 13px
        &:after
          position: absolute
          content: ''
          width: 100%
          height 100%
          background: rgba(0, 0, 0, 1)
          opacity 0.65
          left 0
          top: 0
          border-radius: 4px
          z-index -1
        &:before
          content: ''
          position: absolute
          border-width:0 14px 14px;
          border-style:solid;
          border-color:transparent transparent rgba(0, 0, 0, 1)
          opacity 0.65
          top: -14px
    .input
      flex: 1
      margin-left: 20px
      color: #666666
  .search_buttton
    font-size: 28px


.tags_box
  padding: 20px 36px
  .title_box
    display: flex
    align-items: center
    justify-content: space-between
    color: rgba(51, 51, 51, 1)
    font-size:  32px
    font-weight: bold
    .icon
      color: RGBA(102, 102, 102, 1)
      font-size: 32px
      opacity: 0.7
  .tags_content
    padding: 24px 0
    display: flex
    flex-wrap: wrap
    .item
      display: inline
      background: rgba(234, 234, 234, 1)
      border-radius: 32px
      color: rgba(102, 102, 102, 1)
      font-size: 28px
      line-height: 56px
      padding: 0 32px
      height 56px
      margin-right: 20px
      margin-bottom: 24px
.red
  color: rgba(249, 72, 46, 1)
    
 .back
  background: #ffffff
  position: fixed
  width: 100%
  height 100%
  top: 0
  left :0
  z-index: -1