.fixed
  background: rgba(247,247,247,1)
  position: fixed
  width: 100%
  top: 0
  left 0
  height 100%
  z-index -1
.header
  background: rgba(74,109,254,1)
  padding-top: 48px
  width: 100%
  box-sizing: border-box
  height: 218px
  text-align: center
  color: #ffffff
  .headerTitle
    font-size: 26px
    line-height: 38px
    margin-top: 12px
  .headerNumber
    font-size: 48px
    line-height: 72px
    height: 72px
    font-weight: 600
.cell
  position: relative
  background: #ffffff
  padding: 28px 32px 36px
  box-sizing: border-box
  &::after
    content: ''
    display: block
    position: absolute
    left: 28px
    right: 28px
    width: calc(100% - 56px)
    bottom: 0
    height: 1Px
    transform: translateY(-50%)
    background: rgba(234,234,234,1)
  .cellTop
    display: flex
    justify-content: space-between
    align-items: center
    height: 40px
    font-weight: 500
    .topTitle
      flex: 1 1 auto
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
      font-size: 28px
      color: #333333
    .topPrice
      flex: 0 0 auto
      display: flex
      align-items: flex-end
      color: #F9482E
      .cellSign
        padding-bottom: 2px
        font-size: 32px
      .cellPrice
        font-size: 32px
    .black
      color: #333333
  .cellOrder
    margin-top: 16px
    color: rgba(153,153,153,1)
    font-size: 24px
    line-height: 32px
  .itemFooter
    display:flex
    justify-content: space-between
    align-items: center
    height: 32px
    .cellDate
      margin-top: 12px
      color: rgba(153,153,153,1)
      font-size: 24px
      line-height: 32px
    .cellDesc
      color: #FFA633
      font-size: 24px
      line-height: 1
.cell:nth-child(1)
  margin-top: 16px
.scroll_content
  position: fixed!important
  width: 100%!important
  height:calc(100% - 314px)!important
  top: 314px
  left: 0
.tabList
  border-bottom: 2px solid #EAEAEA
  background-color: #4A6DFE
  height: 96px
  .tabInner
    width: 100%
    height: 100%
    border-radius: 24px 24px 0px 0px
    overflow: hidden
  :global
    .at-tabs, .at-tabs__header
      height: 94px
    .at-tabs__item
      padding: 0
      font-size: 28px
      color: #999999
      height: 94px
      line-height: 94px
      &:after
        content: ''
        width: 48px
        height: 6px
        background-color: #4A6DFE
        border-radius: 3px
        left: 50%
        transform: translateX(-50%)
        bottom: 0
        transition: opacity 0.3s 
        position: absolute
        opacity: 0     
        transform: translateX(-50%)
    .at-tabs__item-underline
      display: none
    .at-tabs__item--active
      color: #333333
      font-weight: 500 
      &:after  
        opacity: 1
.empty_box
  margin-top: 140px
