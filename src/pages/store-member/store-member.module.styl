.header
  width: 100%
  height: 330px
  padding: 0 24px
  background: linear-gradient(135deg, transparent 0px, #f9482e 0px) top left,
              linear-gradient(-135deg, transparent 0px, #f9482e 0px) top right,
              linear-gradient(-18deg, transparent 60px, #f9482e 0px) bottom right,
              linear-gradient(18deg, transparent 60px, #f9482e 0px) bottom left
  background-size: 50% 51% 
  background-repeat: no-repeat;
.header_inner
  width: 100%
  height: 348px
  position: relative
  top: 48px
  border-radius: 18px
  box-shadow: 0px 6px 12px 0px rgba(204,204,204,0.3)
  background-color: #fff
  overflow: hidden
.circle
  width: 90px
  height: 90px
  position: absolute
  top: -40px
  right: 18px
  border-radius: 50%
  box-shadow: 0 0 0 2px #f7f0ef, 0 0 0 60px white, 0 0 0 62px #f7f0ef, 0 0 0 122px white, 0 0 0 124px #f7f0ef
.upper_part
  position: relative
  padding: 48px 48px 28px
  .total_num
    display: flex
    justify-content: space-between
    align-items: center
    .num
      line-height: 68px
      font-size: 48px
      color: #333
    .iconm
      font-size: 50px
    .img
      width: 93px
      display: block
      margin-bottom: 0
      height: 91px
  .mumber_text
    line-height: 45px
    margin-top: 8px
    color: #ccc
    font-size: 32px 
.lower_part
  display: flex
  align-items: center
  padding: 10px 0
  .lower_item
    display: flex
    flex-direction: column
    flex: 1
    align-items: center
    .new_add
      line-height: 45px
      display: flex
      text-align: left
      flex-direction: row
      align-items: center
    .item_num
      color: #333
      font-size: 32px 
    .item_text
      line-height: 33px
      margin-top: 8px
      font-size: 24px
      color: rgba(153, 153, 153, 1)
.body
  padding: 100px 24px 0
  :global
    .loaded, .loading, .pullDownBlock
        font-size: 24px
        color: #666
  .mumber_item
    width: 100%
    display: flex
    align-items: center
    margin-bottom: 36px
    position: relative
    &:after
      position: absolute
      left -50%
      bottom: -20px
      content: ''
      width: 200%
      height 1px 
      background: #dddddd
      transform: scale(0.5)
      z-index 99
      display: block
    .avatar
      flex: 0 0 auto
      width: 88px
      height: 88px
      border-radius: 50%
    .user_info
      flex: 1 1 auto
      display: flex
      flex-direction: column
      justify-content: center
      margin-left: 24px
      position: relative
      .name
        // line-height: 40px
        color: #333333
        font-size: 30px
        display: flex
        align-items: center
        .img
          width: 30px
          height: 30px
          margin-right: 15px
          flex-shrink: 0
      .nick_name
        color: #666
        font-size: 24px
        margin-left: 10px
      .number_time
        display: flex
        justify-content: space-between
        align-items: center
        color: rgba(102, 102, 102, 1)
        font-size: 24px  
        margin-top: 10px
.red
  color: #F84C33
.upicon
  font-size: 50px
  color: #F84C33
  width: 30px
  text-align: center
  position: relative
  top: 7px

.scroll_content
  position: fixed!important
  width: calc(100% - 48px)!important
  height:calc(100% - 450px)!important
  top: 430px
  left: 24px
