 .content
  width: 100%
  overflow: hidden
  background: #F7F7F7
 .pay_success
   background: #ffffff
   padding: 88px
   text-align: center
   .icont_box
    :global
      .iconfont
        font-size: 130px
        color: #F9482E
        line-height: 130px
  .status
    font-size: 28px
    line-height: 28px
    margin-top: 40px
  .gray
    font-size: 24px
    line-height: 35px
    color: #656565
    margin: 26px 50px 0 50px
  .button_box
    display: flex
    align-items: center
    justify-content: center
    margin-top: 48px
    .button
      font-size: 28px
      line-height: 28px
      color: #F9482E
      background: #FEECEA
      padding: 18px 36px
      border-radius: 34px
    .button+.button
      margin-left: 30px
    .right_button  
      color: #fff
      background: #F9482E


.pay_false
  .icont_box
    :global
      .iconfont
        font-size: 130px
        color: #E0E0E0
        line-height: 130px


.tj_out
  text-align: center
  :global
    .at-divider
      height:112px
    .at-divider__content
      background: transparent
.tuijian_box
  display: flex
  flex-wrap: wrap
  justify-content: center
  position: relative
  left: -10px
  .item
    width: 351px
    margin-left: 20px
    background: #ffffff
    border-radius:6px;
    margin-bottom: 16px
    font-size: 26px
    line-height: 26px
    text-align: left 
    .img
      width: 100%
      flex-shrink: 0
      height auto
      border-radius:6px 6px 0 0;
      margin-bottom: 0
      display: block
    .bottom
      padding: 16px 20px
      .title
        font-size: 26px
        color: #666
        line-height: 35px
      .price_box
        margin-top: 25px
        color: #F9482E
        font-size: 24px
        .num
          font-size: 40px
        .small_num
          color: #B3B3B3
          margin-left: 10px
          text-decoration: line-through
      .tag
        font-size: 20px
        line-height: 20px
        color: #F9482E
        background: #FEECEA
        display: inline-block
        padding: 4px
        margin-top: 20px


