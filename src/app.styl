$theme-color = #F9482E
@import './iconfont.styl'

*{
  -webkit-overflow-scrolling: touch;
}
page, body
  font-size 24px
  color #333
  background-color #fff
div, a, view, img, image, input, button, movable-view, cover-image, cover-view, movable-area, scroll-view, swiper, swiper-item, icon, progress, rich-text, text, checkbox, checkbox-group, editor, form, label, picker, picker-view, picker-view-column, radio, radio-group, slider, switch, textarea, navigator
  box-sizing border-box
button:focus, input:focus, textarea:focus
  box-shadow none
  outline none
input,textarea
  -webkit-appearance: none;
  appearance: none;
.taro-img:not(.no-loading) img
  background-image: url("data:image/gif;base64,")
  -webkit-background-size: 32px
  background-size: 32px
  background-repeat: no-repeat
  background-position: center center

.toast-body img
  background-image: none!important

for i in 3px 5px 10px 15px 20px 25px 30px 35px 40px 50px
  .ml{i}
    margin-left i
  .mt{i}
    margin-top i
  .mr{i}
    margin-right i
  .mb{i}
    margin-bottom i
  .pl{i}
    padding-left i
  .pt{i}
    padding-top i
  .pr{i}
    padding-right i
  .pb{i}
    padding-bottom i
// .weui-input
.ui-button
  color white
  background-color $theme-color
.last::after
  content ''
  display block
  position absolute
  left -50%
  width 200%
  bottom 0
  height 1px
  transform: scale(0.5)
  background: #f0f0f0
  border: 0


  
.taro-img,img,image
  vertical-align: middle

// 随机性显示多个界面 框架性 bug
#app > .taro_router > .taro_page
  display: none
  &:last-child
    display: block