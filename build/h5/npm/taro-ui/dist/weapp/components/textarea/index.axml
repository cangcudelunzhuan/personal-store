<block a:if="{{$taroCompReady}}">
    <view class="{{rootCls}}" style="{{anonymousState__temp}}">
        <textarea class="at-textarea__textarea" style="{{anonymousState__temp2}}" placeholder-style="{{placeholderStyle}}" placeholder-class="{{placeholderCls}}" cursor-spacing="{{cursorSpacing}}" value="{{value}}" maxlength="{{actualMaxLength}}" placeholder="{{placeholder}}" disabled="{{disabled}}" auto-focus="{{autoFocus}}" focus="{{focus}}" show-confirm-bar="{{showConfirmBar}}" selection-start="{{selectionStart}}" selection-end="{{selectionEnd}}" fixed="{{fixed}}" onInput="handleInput" onFocus="handleFocus" onBlur="handleBlur" onConfirm="handleConfirm" onLineChange="handleLinechange"></textarea>
        <block a:if="{{count}}">
            <view class="at-textarea__counter">{{value.length}}/{{_maxLength}}</view>
        </block>
    </view>
</block>